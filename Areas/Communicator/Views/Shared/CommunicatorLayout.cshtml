@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>


@{
    var userName = HttpContextAccessor.HttpContext?.Session.GetString("UserName");
}

<!DOCTYPE html>
<html lang="ar">
<head>
    <meta charset="utf-8" />
    <title>نظام الشكاوي - المستخدم</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body dir="rtl">

    <!-- شريط علوي -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <span class="navbar-brand">نظام الشكاوي - المستخدم</span>

            <div class="collapse navbar-collapse justify-content-end">
                @if (!string.IsNullOrEmpty(userName))
                {
                    <span class="navbar-text text-light me-3">
                        مرحباً، <strong>@userName</strong>
                    </span>
                    <a class="btn btn-outline-light btn-sm" asp-area="" asp-controller="Account" asp-action="Logout">تسجيل الخروج</a>
                }
            </div>
        </div>
    </nav>

    <!-- محتوى الصفحة -->
    <div class="container-fluid">
        <div class="row">
            <!-- القائمة الجانبية -->
            <div class="col-md-2 bg-light border-end vh-100 pt-3">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Communicator" asp-controller="Complaints" asp-action="Index">الشكاوي الجديدة</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Communicator" asp-controller="Complaints" asp-action="Create">إضافة شكوى</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Communicator" asp-controller="Complaints" asp-action="Search">البحث عن شكوى</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Communicator" asp-controller="Complaints" asp-action="Assigned">الشكاوي المحولة</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Communicator" asp-controller="Complaints" asp-action="Finshed">الشكاوي المنتهية</a>
                    </li>
                </ul>
            </div>

            <!-- محتوى رئيسي -->
            <div class="col-md-10 p-4">
                @RenderBody()
            </div>
        </div>
    </div>

    @RenderSection("Scripts", required: false)
    @RenderSection("Styles", required: false)

</body>
</html>
