@model IEnumerable<ComplaintSystem.Models.Complaint>
@{
    ViewData["Title"] = "الشكاوي الجديدة";
    Layout = "~/Areas/Communicator/Views/Shared/CommunicatorLayout.cshtml";
    var complaintNumber = TempData["ComplaintNumber"] as string;
}

<h2 class="mb-4 text-center">الشكاوي الجديدة</h2>

<table class="table table-striped table-bordered text-center">
    <thead class="table-dark">
        <tr>
            <th>رقم الشكوى</th>
            <th>اسم المواطن</th>
            <th>رقم الهوية</th>
            <th>نوع الشكوى</th>
            <th>رقم المعاملة</th>
            <th>التاريخ</th>
            <th>الإجراءات</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.ComplaintNumber</td>
                    <td>@item.CitizenName</td>
                    <td>@item.NationalId</td>
                    <td>@item.ComplaintType?.Name</td>
                    <td>@item.TransactionNo</td>
                    <td>@item.CreatedAt.ToString("yyyy/MM/dd")</td>
                    <td>
                        <a asp-area="Communicator" asp-controller="Complaints" asp-action="Details" asp-route-id="@item.ComplaintId" class="btn btn-sm btn-primary">عرض</a>
                        <!-- بإمكانك إضافة زر تحويل أو متابعة هنا -->
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7">لا توجد شكاوي جديدة حاليًا.</td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {

    <script>
        $(function () {
            var complaintNumber = '@TempData["ComplaintNumber"]';
            var successMessage = '@TempData["Success"]';
            var errorMessage = '@TempData["Error"]';

            if (complaintNumber && successMessage) {
                Swal.fire({
                    icon: 'success',
                    title: 'تم بنجاح',
                    html: successMessage + "<br><strong>رقم الشكوى:</strong> " + complaintNumber,
                    confirmButtonText: 'حسناً'
                });
            } else if (errorMessage) {
                Swal.fire({
                    icon: 'error',
                    title: 'خطأ',
                    text: errorMessage,
                    confirmButtonText: 'حسناً'
                });
            }
        });
    </script>
}




