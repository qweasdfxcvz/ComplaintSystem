@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    var userName = HttpContextAccessor.HttpContext?.Session.GetString("UserName");
}

<!DOCTYPE html>
<html lang="ar">
<head>
    <meta charset="utf-8" />
    <title>نظام الشكاوي - الأخصائي</title>
    <!-- الخط والقوالب -->
    <link href="https://fonts.googleapis.com/css2?family=Cairo&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body dir="rtl">

    <!-- الشريط العلوي -->
    <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #343a40;">
        <div class="container-fluid">
            <span class="navbar-brand"><i class="bi bi-person-workspace"></i> نظام الشكاوي - الأخصائي</span>

            <div class="collapse navbar-collapse justify-content-end">
                @if (!string.IsNullOrEmpty(userName))
                {
                    <span class="navbar-text text-light me-3">
                        مرحباً، <strong>@userName</strong>
                    </span>
                    <a class="btn btn-outline-light btn-sm" asp-area="" asp-controller="Account" asp-action="Logout">
                        <i class="bi bi-box-arrow-right"></i> تسجيل الخروج
                    </a>
                }
            </div>
        </div>
    </nav>

    <!-- هيكل الصفحة -->
    <div class="container-fluid">
        <div class="row">
            <!-- القائمة الجانبية -->
            <div class="col-md-2 sidebar border-end">
                <ul class="nav flex-column">
                    <li class="nav-item">
                       <!-- <a class="nav-link" asp-area="Specialist" asp-controller="Complaints" asp-action="Previous">
                            <i class="bi bi-clock-history"></i> الشكاوي السابقة
                         </a> -->
                    </li>
                    <!-- يمكن إضافة عناصر أخرى هنا حسب الحاجة -->
                </ul>
            </div>

            <!-- المحتوى الرئيسي -->
            <div class="col-md-10 p-4">
                @RenderBody()
            </div>
        </div>
    </div>

    <!-- السكربتات -->
    @RenderSection("Scripts", required: false)
    @RenderSection("Styles", required: false)

</body>
</html>
