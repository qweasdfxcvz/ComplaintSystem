@model ComplaintSystem.Models.ComplaintType
@{
    ViewData["Title"] = "إضافة نوع شكوى";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<h2 class="text-center mb-4">@ViewData["Title"]</h2>

<form asp-action="Create" class="col-md-6 mx-auto">
    <div class="mb-3">
        <label asp-for="Name" class="form-label">اسم نوع الحالة</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success"><i class="bi bi-save"></i> حفظ</button>
    <a asp-action="Index" class="btn btn-secondary">إلغاء</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
