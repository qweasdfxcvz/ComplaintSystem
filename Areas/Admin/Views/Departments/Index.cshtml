@model IEnumerable<ComplaintSystem.Models.Department>
@{
    ViewData["Title"] = "إدارة الأقسام";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<h2 class="text-center mb-4">@ViewData["Title"]</h2>

<div class="text-end mb-3">
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> إضافة قسم جديد
    </a>
</div>

<table class="table table-bordered text-center table-striped">
    <thead class="table-dark">
        <tr>
            <th>#</th>
            <th>الاسم</th>
            <th>الهاتف</th>
            <th>البريد الإلكتروني</th>
            <th>الخيارات</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr><td colspan="5" class="text-muted">لا توجد أقسام مضافة بعد.</td></tr>
        }
        else
        {
            int i = 1;
            foreach (var item in Model)
            {
                <tr id="row-@item.DepartmentId">
                    <td>@(i++)</td>
                    <td>@item.Name</td>
                    <td>@item.ContactPhone</td>
                    <td>@item.Email</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.DepartmentId" class="btn btn-sm btn-warning me-1">
                            <i class="bi bi-pencil-square"></i> تعديل
                        </a>
                        <button class="btn btn-sm btn-danger" onclick="confirmDelete(@item.DepartmentId, '@item.Name')">
                            <i class="bi bi-trash"></i> حذف
                        </button>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function confirmDelete(deptId, deptName) {
            Swal.fire({
                title: 'هل أنت متأكد؟',
                text: `سيتم حذف القسم: ${deptName}`,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'نعم، احذفه',
                cancelButtonText: 'إلغاء'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: '/Admin/Departments/Delete',
                        type: 'POST',
                        data: { id: deptId },
                        success: function (res) {
                            if (res.success) {
                                $('#row-' + deptId).fadeOut();
                                Swal.fire({
                                    title: 'تم الحذف!',
                                    text: 'تم حذف القسم بنجاح.',
                                    icon: 'success',
                                    timer: 2000,
                                    showConfirmButton: false
                                });
                            }
                        },
                        error: function () {
                            Swal.fire('خطأ', 'حدث خطأ أثناء الحذف.', 'error');
                        }
                    });
                }
            });
        }
    </script>
}
