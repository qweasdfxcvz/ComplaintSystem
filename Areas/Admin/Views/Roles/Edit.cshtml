@model ComplaintSystem.Models.Role

@{
    ViewData["Title"] = "تعديل الدور";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<h2 class="mb-4 text-center">@ViewData["Title"]</h2>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-area="Admin" asp-controller="Roles" asp-action="Edit" method="post">
            <input type="hidden" asp-for="RoleId" />

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group mb-3">
                <label asp-for="Name" class="form-label">اسم الدور</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-success">حفظ التعديلات</button>
                <a asp-action="Index" class="btn btn-secondary">إلغاء</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
