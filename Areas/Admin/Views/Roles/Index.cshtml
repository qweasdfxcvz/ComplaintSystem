@model IEnumerable<ComplaintSystem.Models.Role>
@{
    ViewData["Title"] = "الأدوار";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">@ViewData["Title"]</h2>

    <div class="text-end mb-3">
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> إضافة دور
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-bordered table-striped text-center mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>#</th>
                        <th>الاسم</th>
                        <th>الخيارات</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="3" class="text-muted">لا توجد أدوار حالياً.</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var role in Model)
                        {
                            <tr id="row-@role.RoleId">
                                <td>@role.RoleId</td>
                                <td>@role.Name</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@role.RoleId" class="btn btn-warning btn-sm me-1">
                                        <i class="bi bi-pencil-square"></i> تعديل
                                    </a>
                                    <button class="btn btn-danger btn-sm" onclick="confirmDelete(@role.RoleId, '@role.Name')">
                                        <i class="bi bi-trash"></i> حذف
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        function confirmDelete(roleId, roleName) {
            Swal.fire({
                title: 'هل أنت متأكد؟',
                text: `سيتم حذف الدور: ${roleName}`,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'نعم، احذفه',
                cancelButtonText: 'إلغاء'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: '/Admin/Roles/Delete',
                        type: 'POST',
                        data: { id: roleId },
                        success: function (res) {
                            if (res.success) {
                                $('#row-' + roleId).fadeOut();
                                Swal.fire({
                                    title: 'تم الحذف!',
                                    text: 'تم حذف الدور بنجاح.',
                                    icon: 'success',
                                    timer: 2000,
                                    showConfirmButton: false
                                });
                            } else {
                                Swal.fire('خطأ', res.message || 'حدث خطأ أثناء الحذف.', 'error');
                            }
                        },
                        error: function () {
                            Swal.fire('خطأ', 'حدث خطأ أثناء الحذف.', 'error');
                        }
                    });
                }
            });
        }
    </script>
}

