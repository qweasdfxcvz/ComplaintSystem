@model ComplaintSystem.Models.ComplaintStatus
@{
    ViewData["Title"] = "إضافة حالة شكوى";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<h2 class="text-center mb-4">@ViewData["Title"]</h2>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-area="Admin" asp-controller="ComplaintStatuses" asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group mb-3">
                <label asp-for="Name" class="form-label">اسم الحالة</label>
                <input asp-for="Name" class="form-control" placeholder="مثال: قيد المعالجة" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-plus-circle"></i> إضافة
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> العودة
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

